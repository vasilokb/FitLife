@startuml

!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml


Person(user, "Пользователь", "пользователь системы фитнес-клуба,")
Person(admin, "Администратор", "администратор, управляющий системой и осуществляющий поддержку пользователей")
System(fitlife, "FitLife System", "система, которая управляет членством, расписанием занятий и обработкой платежей.")

System_Ext(api, "Third-Party API", "внешний API для интеграции данных о фитнесе")
System_Ext(bank, "Bank System", "внешняя банковская система для обработки платежей")
Rel(user, fitlife, "Использует приложение")
Rel(admin, fitlife, "Администрирует приложение вот так")
Rel(fitlife, api, "Потребляет фитнесс данные")
Rel(fitlife, bank, "Выполнение платежей")

@enduml